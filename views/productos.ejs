<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <link rel="stylesheet" href="styles.css" />
    <!-- Iconos -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        /* Estilos para los productos */
        .cards{
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1rem;
        }

        .card{
            padding: 1rem;
            border: 1px solid #ffffff;
            background-color: #ffffff;
            border-radius: 0.5rem;
            text-align: center;
        }

        .card img {
            width: 100%;
            height: 300px;
            border-radius: 0.5rem;
            object-fit: cover;
        }

        .search-bar {
            margin-bottom: 1rem;
            display: flex;
            justify-content: center;
        }

        .search-bar input {
            width: 50%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 0.5rem;
        }

        /*Estilos para el contenedor del modal de reservciones*/
    .modalproduct {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.6);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 1;
    }

    .modalproduct  form{
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        width: 100%;
        max-width: 320px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .modalproduct  form h2 {
        margin-bottom: 1rem;
        text-align: center;
    }

    .modalproduct input {
        width: 100%;
        padding: 0.8rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .modalproduct  button {
        margin-top: 1rem;
        width: 100%;
        padding: 0.5rem 1rem;
        background-color: #c53030;
        color: #ffffff;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
    }

    .modalproduct  button:hover {
        background-color: #581414;
    }
    </style>
</head>
<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="top">
                <div class="logo">
                    <img src="./img/logo.jpeg" alt=""> 
                    <span>pepe's</span>
                </div>
                <div class="toggle">
                    <i class='bx bx-x'></i>
                </div>
            </div>
            <%- include('rutas')%>
        </aside>

        <% if (user.rol === 1) { %>     
        <div id="productmodal" class="modalproduct">
            <div class="modal-content">
                <form action="/productos/agregar" method="POST">
                    <h2>Agregar Producto</h2>
                    <input type="text" name="nombre" placeholder="Nombre del producto" required>
                    <input type="text" name="descripcion" placeholder="Descripción del producto" required>
                    <input type="number" name="precio" placeholder="Precio del producto" required>
                    <input type="text" name="stock" placeholder="Stock del producto" required>
                    <input type="text" name="imagen_producto"  alt="Imagen del producto" placeholder="URL de la imagen" required>
                    <button id="Agregar" type="submit">Agregar Producto</button>
                    <button id="cerrarnew" type="button">Cerrar</button>
                </form>
            </div>
        </div>
        <% } %>

        <main class="content">
            <h1>Productos</h1>

            <% if (user.rol === 1) { %>
                <!-- solo mostrar a recepcionistas -->
                <button id="new" class="newproduct">
                <i class='bx bx-plus'></i> Agregar nuevo producto
                </button>
            <% } %>


            <div class="search-bar">
                <input type="text" placeholder="Buscar productos..." id="searchInput" onkeyup="filterProducts()">
            </div>
            <div class="cards" id="productCards">
                <% products.forEach(product => { %>
                    <div class="card">
                        <img src="<%= product.imagen_producto ? product.imagen_producto : '/img/default-product.jpg' %>" alt="<%= product.nombre %>">
                        <h3><%= product.nombre %></h3>
                        <p><%= product.descripcion %></p>
                        <p>Precio: <strong><%= product.precio %>$</strong></p>
                        <% if (user.rol === 1) { %>
                            <button 
                            class="btn-delete2" 
                            onclick="confirmDelete(<%= product.id_producto %>)">
                            <i class='bx bxs-trash-alt'></i>
                            </button>
                        <% } %>
                        <% if (user.rol === 2) { %>
                            <button 
                                class="btn-check" 
                                onclick="confirmOrder(<%= product.id_producto %>)">
                                <i class='bx bx-check'></i>
                            </button>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        </main>
    </div>

    <script>
        function filterProducts() {
            const input = document.getElementById('searchInput').value.toLowerCase();
            const cards = document.getElementById('productCards').getElementsByClassName('card');

            for (let card of cards) {
                const title = card.getElementsByTagName('h3')[0].innerText.toLowerCase();
                if (title.includes(input)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            }
        }
    </script>
    <script>
        function confirmDelete(idProducto) {
            const isConfirmed = confirm("¿Estás seguro que quieres borrar este producto?");
            if (isConfirmed) {
                location.href = `/productos/eliminar/${idProducto}`;
            }
        }
    </script>
    <script>
        function confirmOrder(idProducto) {
            const isConfirmed = confirm("¿Estás seguro que quieres ordenar este producto?");
            if (isConfirmed) {
                location.href = `/productos/ordenar/${idProducto}`;
            }
        }
    </script>


<script src="js/nav.js"></script>
<script src="js/modaledit.js"></script>
</body>
</html>