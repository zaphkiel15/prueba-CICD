<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios - Admin</title>
    <link rel="stylesheet" href="styles.css">
    <!-- Iconos -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        .search-bar {
            margin-bottom: 1rem;
            display: flex;
            justify-content: center;
        }

        .search-bar input {
            width: 50%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 0.5rem;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 2rem 0;
        }
    
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
    
        th {
            background-color: #39633f;
            color: white;
        }
    
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    
        tr:hover {
            background-color: #ddd;
        }
    
        p {
            text-align: center;
            font-size: 1.2rem;
            color: #555;
        }

        .btn-action {
            padding: 0.5rem 1rem;
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 0.5rem;
            cursor: pointer;
        }

        .btn-action:hover {
            background-color: #388e3c;
        }

        .btn-delete2 {
            background-color: #e53935;
        }

        .btn-delete2:hover {
            background-color: #c62828;
        }

        select {
            padding: 0.5rem;
            border-radius: 0.5rem;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="top">
                <div class="logo">
                    <img src="./img/logo.jpeg" alt=""> 
                    <span>pepe's</span>
                </div>
                <div class="toggle">
                    <i class='bx bx-x'></i>
                </div>
            </div>
            <%- include('rutas') %>
        </aside>

        <main class="content">
            <h1>Usuarios Actuales</h1>
            <% if (errorMessage) { %>
                <p class="errorMessage"><%= errorMessage %></p>
            <% } %>
            <% if (successMessage) { %>
                <p class="successMessage"><%= successMessage %></p>
            <% } %>

            <div class="search-bar">
                <input type="text" placeholder="Buscar usuarios..." id="searchInput" onkeyup="filterUsers()">
            </div>
        
            <% if (usuarios.length === 0) { %>
                <p>No hay usuarios registrados.</p>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID Usuario</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usuarios.forEach(usuario => { %>
                            <tr>
                                <td><%= usuario.id_usuario %></td>
                                <td><%= usuario.nombre %></td>
                                <td><%= usuario.correo %></td>
                                <td>
                                    <form action="/users/update-role" method="POST" style="display: inline;">
                                        <input type="hidden" name="id_usuario" value="<%= usuario.id_usuario %>">
                                        <select name="id_rol">
                                            <option value="1" <%= usuario.id_rol === 1 ? 'selected' : '' %>>Admin</option>
                                            <option value="2" <%= usuario.id_rol === 2 ? 'selected' : '' %>>User</option>
                                            <option value="3" <%= usuario.id_rol === 3 ? 'selected' : '' %>>Receptionist</option>
                                        </select>
                                        <button type="submit" class="btn-action">Aplicar</button>
                                    </form>
                                </td>
                                <td>
                                    <button 
                                        class="btn-action btn-delete2" 
                                        onclick="if(confirm('¿Estás seguro de eliminar este usuario?')) location.href='/users/delete/<%= usuario.id_usuario %>'">
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </main>
    </div>
    <script>
        function filterUsers() {
            const input = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('table tbody tr');
    
            rows.forEach(row => {
                const cells = row.getElementsByTagName('td');
                const idUsuario = cells[0]?.innerText.toLowerCase() || '';
                const nombre = cells[1]?.innerText.toLowerCase() || '';
                const correo = cells[2]?.innerText.toLowerCase() || '';
                const rol = cells[3]?.innerText.toLowerCase() || '';
    
                // Check if the input matches any of the columns
                if (idUsuario.includes(input) || nombre.includes(input) || correo.includes(input) || rol.includes(input)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>

    <script src="js/nav.js"></script>
</body>
</html>